<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.PaperFragments.TrackingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/fixed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="@string/strategy_str"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_bt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/sample"
                        android:src="@drawable/baseline_expand_more_24" />
                </LinearLayout>

                <Button
                    android:id="@+id/trac_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:onClick="SetTrack"
                    android:text="Отслеживать"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/hidden_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/strat_detail1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="start|center"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/strat_info1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="end|center"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/strat_detail2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="start|center"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/strat_info2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="end|center"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/strat_detail3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="start|center"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/strat_info3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sample"
                            android:textSize="19sp"
                            android:gravity="end|center"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/prodgoze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Консенсус прогноз"
            android:textSize="34sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Покупать"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>